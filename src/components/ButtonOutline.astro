---
import { twMerge } from "tailwind-merge";
const defaultClasses =
  "block py-4 px-9 w-full font-semibold border border-gray-300 hover:border-gray-400 rounded-xl focus:ring focus:ring-gray-50 bg-transparent hover:bg-gray-100 transition ease-in-out duration-200";
interface Props {
  href: string;
  className?: string;
  onClick?: (event: MouseEvent) => void;
}

const { href, className, onClick } = Astro.props;
---

<a href={href} class={twMerge(defaultClasses, className)} type="button"
  ><slot /></a
>
