---
import { twMerge } from "tailwind-merge";
const defaultClasses =
  "block py-4 px-9 w-full text-white text-center font-semibold border border-blue-700 rounded-xl focus:ring focus:ring-blue-400 bg-blue-600 hover:bg-blue-700 transition ease-in-out duration-200";
interface Props {
  href: string;
  className?: string;
  onClick?: (event: MouseEvent) => void;
}

const { href, className, onClick } = Astro.props;
---

<a href={href} class={twMerge(defaultClasses, className)} type="button"
  ><slot /></a
>
